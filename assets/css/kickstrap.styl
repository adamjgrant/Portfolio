$brown = rgba(242, 239, 235, 0.9)
$spine-color = #CCC
$turq = rgb(24, 188, 156)

p, a, label, em, strong, table, ul, li
	font-family: "proxima nova"
p
	font-size: 16px
	&.lead
		font-size: 28px
h1, h2, h3, h4, h5, .jumbotron p, .navbar a
	font-family: "museo-sans"
h1
	font-size: 30px

.thumbnail, .img-thumbnail
	border-color: transparent
	.caption
		color: #555
		font-size: 85%

.hover-grp
	.show-hover
		display: none
	.hide-hover
		display: inherit
	.visible-hover
		visibility: hidden
	.hidden-hover
		visibility: visible
	&:hover
		.show-hover
			display: block
		.hide-hover
			display: none
		.visible-hover
			visibility: visible 
		.hidden-hover
			visibility: hidden

.timeline-icon
	position: absolute
	background-image: url('/img/timeline-icon.png')
	background-repeat: no-repeat
	background-size: 100%
	width: 60px
	height: 60px

.tl-spine
	border-left: 5px solid #DDD
	&-dot
		display: inherit
		padding: 20px
		&_employer
			padding: 50px 20px
			.tl-spine-dot-marker-yearFlag
				background-color: $turq
				color: #FFF
		&-marker
			padding: 4px
			background-color: $spine-color
			display: inline-block
			position: relative
			border: 3px solid white
			margin-left: -29px
			border-radius: 10px
			float: left
			clear: right
			&:before
				position: absolute; display: block; content: ''
				border: 1px solid darken($spine-color, 5%)
				height: 16px
				width: 16px
				top: -4px
				left: -4px
				box-sizing: border-box; -moz-box-sizing: border-box; -webkit-box-sizing: border-box
				border-radius(50%)
			&-yearFlag
				position: absolute
				padding: 3px 15px
				font-size: 18px
				border-radius: 5px
				top: -11px
				left: 15px
				z-index: 1
				color: #A1A1A1

article
	margin-top: 150px
	margin-bottom: 150px
.affix
	top: 80px
.pointer
	cursor: pointer

.container_max
	max-width: 1200px
	margin: 0px auto
	display: block
	background-color: white
	box-shadow(0px 5px 5px #555)
	padding-bottom: 25px
	border-bottom: 1px solid #CCC
.jumbotron
	background-image: url("/img/tg_cropped_blurred_blue.png")
	background-size: 320px auto
	height: 160px
	background-repeat: no-repeat
	* 
		text-align: center
	h1, a, p
		color: white
	h1
		font-size: 18pt
	p.lead
		font-size: 14px
.page-header
	&-img
		width: 50px

@media (min-width: 321px)
	.jumbotron
		background-size: 768px auto
		height: 382px
		h1
			font-size: 22pt
			margin-top: 125px
	.page-header
		&-img
			width: 107px
	.timeline-icon
		top: -101px
@media (min-width: 768px)
	.navbar-default
		background-color: rgba(238, 238, 238, 0.9)
		transition: background-color 0.5s
		&:hover
			background-color: white
			border-color: #CCC
			.navbar-brand, .navbar-nav > 
				li > a
					color: #555
					&:hover
						color: $turq
				li.active > a
					color: $turq
		.navbar-brand, .navbar-nav > li > a
			color: #888
		border-color: transparent
		.navbar-nav > .active > a, .navbar-nav > .active > a:hover, .navbar-nav > .active > a:focus
			color: $turq
			background-color: transparent
	.tl-spine
		&_hoverable:hover
			outline: 1px solid #CCC
			box-shadow: 0px 0px 5px #BBB
			margin-left: -25px
			padding-left: 25px
			border-color: $turq
			.tl-spine-dot-marker
				margin-left: -85px
				background-color: $turq
				&:before
					border-color: $turq
		&-dot
			padding: 20px 50px
			&-marker
				margin-left: -60px
			&_employer
				padding: 50px
	h1
		font-size: 39px
	.jumbotron
		background-size: 992px auto
		height: 494px
		h1
			margin-top: 45px
			font-weight: 100
		p.lead
			font-size: 30px
		p.small
			font-size: 12px
	.page-header
		&-img
			width: 125px
@media (min-width: 992px)
	.jumbotron
		background-size: 1200px auto
		height: 598px
		h1
			font-size: 70pt
			margin-top: 75px
		img
			opacity: 0.5
			width: 125px
			&:hover
				opacity: 1.0
		p.small
			font-size: 16px
	.timeline-icon
		top: -80px
		left: -5px
@media (min-width: 1201px)
	body
		background-color: #EEEEEE

// CSS PRERENDERING
.pr-img
	background-image: url('data:image/gif;base64,')
	background-color: white
	background-repeat: no-repeat
	background-position: 50%
	&_featured
		width: 300px
		height: 250px

$footerHeight = 50px
body
	padding-top: 60px // For fixed navbar
	.ks-beforeload
		display: block
	.ks-afterload
		display: none
	&.loaded
		.ks-beforeload
			display: none
		.ks-afterload
			display: block

// Sticky Footer

html
, body
	height: 100%

#sf-wrap
	min-height: 100%
	height: auto !important
	height: 100%
	margin 0 auto (-1 * $footerHeight)
	padding: 0 0 $footerHeight

#sf-footer
	height: $footerHeight

#sf-push
	padding-top: $footerHeight
	display: block
	background-color: #EEE