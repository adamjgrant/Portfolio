$brown = rgba(242, 239, 235, 0.9)
$spine-color = #CCC
.tl-spine
	border-left: 5px solid #DDD
	&:hover
		outline: 1px solid #CCC
		box-shadow: 0px 0px 5px #BBB
		margin-left: -25px
		padding-left: 25px
		.tl-spine-dot-marker
			margin-left: -85px
	&-dot
		display: inherit
		padding: 10px 50px
		&_employer
			padding: 50px
		&-marker
			padding: 4px
			background-color: $spine-color
			display: inline-block
			position: relative
			border: 3px solid white
			margin-left: -60px
			border-radius: 10px
			float: left
			clear: right
			&:before
				position: absolute; display: block; content: ''
				border: 1px solid darken($spine-color, 5%)
				height: 16px
				width: 16px
				top: -4px
				left: -4px
				box-sizing: border-box; -moz-box-sizing: border-box; -webkit-box-sizing: border-box
				border-radius(50%)

article
	margin-top: 150px
	margin-bottom: 150px
.pointer
	cursor: pointer

// CSS PRERENDERING
.pr-img
	background-image: url('data:image/gif;base64,')
	background-color: #F5F5F5
	background-repeat: no-repeat
	background-position: 50%
	&_featured
		width: 300px
		height: 250px

$footerHeight = 50px
body
	padding-top: 60px // For fixed navbar
	.ks-beforeload
		display: block
	.ks-afterload
		display: none
	&.loaded
		.ks-beforeload
			display: none
		.ks-afterload
			display: block

// Sticky Footer

html
, body
	height: 100%

#sf-wrap
	min-height: 100%
	height: auto !important
	height: 100%
	margin 0 auto (-1 * $footerHeight)
	padding: 0 0 $footerHeight

#sf-footer
	height: $footerHeight

#sf-push
	padding-top: $footerHeight
	display: block