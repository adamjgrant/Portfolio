$brown = rgba(242, 239, 235, 0.9)

article
	margin-top: 150px
	margin-bottom: 150px
.pointer
	cursor: pointer

// CSS PRERENDERING
.pr-img
	background-image: url('data:image/gif;base64,')
	background-color: #F5F5F5
	background-repeat: no-repeat
	background-position: 50%
	&_featured
		width: 300px
		height: 250px

$footerHeight = 50px
body
	padding-top: 70px // For fixed navbar
	.ks-beforeload
		display: block
	.ks-afterload
		display: none
	&.loaded
		.ks-beforeload
			display: none
		.ks-afterload
			display: block

// Sticky Footer

html
, body
	height: 100%

#sf-wrap
	min-height: 100%
	height: auto !important
	height: 100%
	margin 0 auto (-1 * $footerHeight)
	padding: 0 0 $footerHeight

#sf-footer
	height: $footerHeight

#sf-push
	padding-top: $footerHeight
	display: block