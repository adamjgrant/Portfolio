!!!
html(lang='en')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")
    meta(name='description', content='The Elegant Frontend Framework')
    meta(name='author', content= 'Adam Kochanowicz')
    script(src='js/loader.js')
    script(src="//cdn.firebase.com/v0/firebase.js")
    script(src='js/settings.js')
    script(src='js/kickstrap.js')
    :coffeescript
      a = document.createElement 'link'
      a.id = 'main-stylesheet'
      a.rel = 'stylesheet'
      if k$.settings.theme == 'bootstrap'
        a.href="https://github.jspm.io/twbs/bootstrap@3.0.2/css/bootstrap.css"
      else
        a.href= 'themes/' + k$.settings.theme + '.css'
      document.head.appendChild a
    title #{title}
    link(rel='stylesheet' href="/css/kickstrap.css")
  body
    #sf-wrap
      .container_max#top(ng-controller='ProjectsCtrl')
        block variables
        block content
      #sf-push
    section#sf-footer.navbar.navbar-inverse.navbar-static-top
      .container
        ul.nav.navbar-nav
          li
            a(href="#") &copy; #{yourname}
        ul.nav.navbar-nav.pull-right
          li
            a(href="http://getkickstrap.com") Powered by 
              span.kickstrap-logo Kickstrap
    :coffeescript
      k$.ready ->  
        setTimeout ->
          jspm.import 'ks:featuredimages'
        , 700
  script.
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-1315296-16']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  script(src="//use.typekit.net/pvn6abu.js")
  script.
    try{Typekit.load();}catch(e){}