.container
	.row
		.col.col-md-10.col-md-offset-1
			br
			.page-header
				img.img-responsive.pull-right.page-header-img(src="/img/hex-{{selectedCategory().slug}}.png")
				h1 {{selectedCategory().name}}
			p.lead {{selectedCategory().lead}} 
			p {{selectedCategory().desc}}
	br
	.row
		.col.col-md-8.col-md-offset-1
			div(ng-repeat="project in projects | filter: {category: selectedCategory().slug}")
				.tl-spine(ng-click="setLocation(slug(project.category))")
					.tl-spine-dot.tl-spine-dot_employer
						.tl-spine-dot-marker.img-rounded
						.col.col-md-6
							.pr-img.pr-img_featured.img-responsive(class="pr-img_{{slug(project.name)}}")
						.col.col-md-6
							h1(id="{{slug(project.name)}}") {{project.name}}
								br
								small {{project.year}}
							br
							p {{project.shortDesc}}
							p.text-muted Technology: {{project.technologies}}
						div(ng-include="projectLongDesc(project)")
						.clearfix

				.clearfix
		.col.col-md-2.visible-lg.visible-md
			div.affixer(data-spy="affix" data-offset-top="200")
				h4 On this page
				br
				ul.list-unstyled
					li(ng-repeat="project in projects | filter: {category: selectedCategory().slug}") 
						a.pointer(ng-click="setLocation(slug(project.category), slug(project.name), true)") {{project.name}}