.container
	div(ng-controller='ProjectsCtrl')
		.row
			.col.col-lg-12
				.page-header
					img.img-responsive.pull-right.page-header-img(src="/img/hex-{{selectedCategorySlug}}.png")
					h1 {{selectedCategory()}}
		article.row(ng-repeat="project in projects | filter: {category: selectedCategorySlug}")
			.col.col-md-6.col-lg-4
				.pr-img.pr-img_featured.img-responsive(class="pr-img_{{slug(project.name)}}")
			.col.col-md-6.col-lg-8
				h2 {{project.name}}
				div(ng-include="projectLongDesc(project)")